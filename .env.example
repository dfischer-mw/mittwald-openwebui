# GitHub Container Registry push (local make push)
GHCR_USERNAME=your_github_username
GHCR_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# GitHub Actions optional secrets
HUGGINGFACE_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
MITTWALD_API_TOKEN=your_mittwald_portal_token

# Runtime: Mittwald OpenAI-compatible endpoint bootstrap
# Required to auto-discover models and configure Open WebUI provider setup.
MITTWALD_OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
MITTWALD_OPENAI_BASE_URL=https://llm.aihosting.mittwald.de/v1

# Runtime: bootstrap behavior toggles
MITTWALD_CONFIGURE_AUDIO_STT=true
MITTWALD_SET_DEFAULT_MODEL=true
MITTWALD_CONFIGURE_RAG_EMBEDDING=true
MITTWALD_DISCOVERY_TIMEOUT_SEC=20
OWUI_BOOTSTRAP_FORCE=true

# Runtime: optional user chat parameter overrides.
# If omitted, defaults are selected automatically from discovered model family
# (e.g. Ministral -> temperature 0.1, top_p 0.5, top_k 10).
# OWUI_BOOTSTRAP_TEMPERATURE=0.1
# OWUI_BOOTSTRAP_TOP_P=0.5
# OWUI_BOOTSTRAP_TOP_K=10
# OWUI_BOOTSTRAP_REPETITION_PENALTY=1.0
# OWUI_BOOTSTRAP_MAX_TOKENS=4096
